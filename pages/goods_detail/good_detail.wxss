/* 轮播图 */
.detail-swiper {
  width: 750rpx;
  height: 400rpx;
  background-color: #fff;
}

.detail-swiper .swiper-item {
  display: flex;
  justify-content: center;
}

.detail-swiper image {
  width: 400rpx;
}

/* 轮播图结束 */

/* 头部标题 */
.detail-head {
  padding: 10rpx;
  background-color: #fff;
}

.detail-head .price {
  display: inline-block;
  color: var(--theme-color);
  font-size: 30rpx;
  font-weight: bold;
}

.detail-head .title-group {
  display: flex;
  align-items: center;
}

.title-group .title-text {
  flex: 8;
  padding-right: 30rpx;
}

.title-group .collect-icon {
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 2px solid #ccc;
}

.collect-icon text {
  font-size: 26rpx;
}

.collect-icon i.active {
  color: #DA4A55;
}

/* 头部标题结束 */

/* 图文详情 开始*/
.content-container {
  margin-top: 20rpx;
  margin-bottom: 90rpx;
}

.content-title {
  padding: 20rpx;
  background-color: #fff;
  color: var(--theme-color);
  font-weight: bold;
}

/* 图文详情 结束*/

/* 底部工具栏 */
.footer-tool {
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 90rpx;
  background-color: #fff;
}

.footer-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.footer-item text {
  font-size: 24rpx;
}

.footer-item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.footer-item.buy, .footer-item.cart {
  flex: 2;
  color: #fff;
}

.footer-item.cart {
  background-color: #EB9E10;
}

.footer-item.buy {
  background-color: #DA4A55;
}