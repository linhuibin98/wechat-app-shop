/* pages/category/category.wxss */
.cate-container {

}

.cate-content {
  display: flex;
  height: calc(100vh - 76.8rpx);
}
/* 左边菜单 */
.left-menu {
  flex: 2;
  height: 100%;
}

.menu-item {
  text-align: center;
  padding: 10rpx 0;
  margin: 10rpx 0;
  font-size: 30rpx;
}

.menu-item.active {
  color: var(--theme-color);
  border-left: 6rpx solid var(--theme-color);
}
/* 右边内容 */
.right-content {
  flex: 5;
  height: 100%;
  padding: 20rpx 40rpx 0 40rpx;
}

.content-group {

}

.content-head {
  text-align: center;
}

.content-head .sp {
  color: #ccc;
}

.content-list {
  display: flex;
  margin-top: 40rpx;
  flex-wrap: wrap;
}

.list-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  margin-right: 40rpx;
  font-size: 24rpx;
}

.list-img {
  width: 120rpx;
}

.list-img image {
  width: 100%;
}